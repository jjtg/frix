{
  "name": "@jt-dev/frix",
  "version": "0.3.5",
  "description": "A sturdy, easy-to-use TypeScript library for database operations with Kysely",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run tests/unit",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run tests/unit --coverage",
    "benchmark": "vitest run tests/integration/performance.test.ts",
    "lint": "biome lint src tests",
    "lint:fix": "biome lint --write src tests",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write src tests",
    "format:check": "biome format src tests",
    "check": "biome check src tests",
    "check:fix": "biome check --write src tests",
    "precommit": "npm run typecheck && npm run check && npm run test",
    "prepublishOnly": "npm run typecheck && npm run check && npm run test && npm run build",
    "db:generate": "kanel",
    "prepare": "husky install"
  },
  "keywords": [
    "kysely",
    "database",
    "typescript",
    "postgresql",
    "orm"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^1.0.0",
    "husky": "^8.0.3",
    "kanel": "^3.6.0",
    "kanel-kysely": "^0.3.0",
    "kysely": "^0.27.4",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "kysely-ctl": "^0.19.0",
    "pg": "^8.11.0"
  },
  "peerDependencies": {
    "kysely": "^0.28.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
